<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryLightColor"
    tools:context=".fragments.GameFragment">


    <TextView
        android:id="@+id/txt_play_now"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PLAY NOW"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="50sp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/txt_who_are_playing"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txt_who_are_playing"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="30sp"
        app:layout_constraintTop_toBottomOf="@id/txt_play_now"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/txt_turn"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txt_turn"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/game_board"
        app:layout_constraintTop_toBottomOf="@id/txt_who_are_playing"/>



    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/game_board"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:columnCount="3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_turn"
        app:rowCount="3">

        <ImageView
            android:id="@+id/img1"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="10dp"
            android:alpha="0.3"
            android:background="@color/black"
            android:padding="10dp"
            android:tag="0" />

        <ImageView
            android:id="@+id/img2"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="10dp"
            android:alpha="0.3"
            android:background="@color/black"
            android:padding="10dp"
            android:tag="1" />

        <ImageView
            android:id="@+id/img3"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="10dp"
            android:alpha="0.3"
            android:background="@color/black"
            android:padding="10dp"
            android:tag="2" />

        <ImageView
            android:id="@+id/img4"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="10dp"
            android:alpha="0.3"
            android:background="@color/black"
            android:padding="10dp"
            android:tag="3" />

        <ImageView
            android:id="@+id/img5"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="10dp"
            android:alpha="0.3"
            android:background="@color/black"
            android:padding="10dp"
            android:tag="4" />

        <ImageView
            android:id="@+id/img6"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="10dp"
            android:alpha="0.3"
            android:background="@color/black"
            android:padding="10dp"
            android:tag="5" />

        <ImageView
            android:id="@+id/img7"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="10dp"
            android:alpha="0.3"
            android:background="@color/black"
            android:padding="10dp"
            android:tag="6" />

        <ImageView
            android:id="@+id/img8"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="10dp"
            android:alpha="0.3"
            android:background="@color/black"
            android:padding="10dp"
            android:tag="7" />

        <ImageView
            android:id="@+id/img9"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="10dp"
            android:alpha="0.3"
            android:background="@color/black"
            android:padding="10dp"
            android:tag="8" />
    </androidx.gridlayout.widget.GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>